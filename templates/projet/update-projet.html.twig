{% extends 'backoffice.html.twig' %}

{% block content %}

    <div class="container">
        <div class="row">
            <div class="col-lg-6 col-xs-12">
                <h2>Modifier Projet</h2>
                {{ form_start(form) }}
                {{ form_row(form.name) }}
                {{ form_row(form.debut) }}
                {{ form_row(form.fin) }}
                {{ form_row(form.contexte) }}
                {{ form_row(form.temps) }}
                {{ form_row(form.github) }}
            </div>
            <div class="col-lg-6 col-xs-12">
                {{ form_row(form.besoin) }}
                {{ form_row(form.bilan) }}
                <p>Documentation actuelle : {{ projet.doc }}</p>
                {{ form_row(form.doc) }}
                {{ form_row(form.technos) }}
                <img src="{{ asset('uploads/projet/' ~ projet.screen) }}" alt="" style="width: 100%;">
                {{ form_row(form.screen) }}
                {{ form_row(form.submit, { 'label': 'Modifier' }) }}
                {{ form_end(form) }}
            </div>
        </div>
    </div>

{% endblock%}
